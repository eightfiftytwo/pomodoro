using Gtk 4.0;
using Adw 1;

template $AlarmPreferences : Adw.Window {
  default-width: 350;
  modal: true;
  title: _('Alarm preferences');
  resizable: false;

  content: Gtk.Box {
    hexpand: true;
    vexpand: true;
    orientation: vertical;
    Adw.HeaderBar {
      styles ["flat"]
    }
    Adw.PreferencesGroup {
      margin-start: 10; 
      margin-end: 10; 
      margin-bottom: 10; 
      margin-top: 10; 
      Adw.ExpanderRow timer_start_alarm {
        title: 'Timer start alarm';
        subtitle: 'freedesktop';
        [prefix]
        Gtk.Button {
          halign: center;
          valign: center;
          icon-name: 'media-playback-start-symbolic';
          tooltip-text: _("Play sound");
          clicked => $_play_timer_start_alarm();
        }
        [prefix]
        Gtk.Button {
          halign: center;
          valign: center;
          icon-name: 'system-restart-symbolic';
          tooltip-text: _("Reset settings");
          clicked => $_reset_timer_start_settings();
        }
        Adw.ActionRow uri_timer_start_alarm {
          title: 'message-new-instant';
          subtitle: 'freedesktop';
          [suffix]
          Gtk.Button {
            halign: center;
            valign: center;
            icon-name: 'folder-open-symbolic';
            tooltip-text: _("Select sound file");
            clicked => $_select_timer_start_alarm();
          }
        }
        Adw.ActionRow {
          title: 'Repeat alarm';
          SpinButton repeat_timer_start_alarm {
            valign: center;
            numeric: true;
            adjustment:
              Adjustment {
                lower: 1;
                upper: 10;
                value: 1;
                page-increment: 1;
                step-increment: 1;
              };
              value-changed => $_on_repeat_timer_start_alarm_changed();
          }
        }
      }
      Adw.ExpanderRow timer_break_alarm {
        title: 'Timer break alarm';
        subtitle: 'freedesktop';
        [prefix]
        Gtk.Button {
          halign: center;
          valign: center;
          icon-name: 'media-playback-start-symbolic';
          clicked => $_play_timer_break_alarm();
        }
        [prefix]
        Gtk.Button {
          halign: center;
          valign: center;
          icon-name: 'system-restart-symbolic';
          clicked => $_reset_timer_break_settings();
        }
        Adw.ActionRow uri_timer_break_alarm {
          title: 'complete';
          subtitle: 'freedesktop';
          [suffix]
          Gtk.Button {
            halign: center;
            valign: center;
            icon-name: 'folder-open-symbolic';
            clicked => $_select_timer_break_alarm();
          }
        }
        Adw.ActionRow {
          title: 'Repeat alarm';
          SpinButton repeat_timer_break_alarm {
            valign: center;
            numeric: true;
            adjustment:
              Adjustment {
                lower: 1;
                upper: 10;
                value: 1;
                page-increment: 1;
                step-increment: 1;
              };
              value-changed => $_on_repeat_timer_break_alarm_changed();
          }
        }
      }
      Adw.ExpanderRow timer_finish_alarm {
        title: 'Timer finish alarm';
        subtitle: 'freedesktop';
        [prefix]
        Gtk.Button {
          halign: center;
          valign: center;
          icon-name: 'media-playback-start-symbolic';
          clicked => $_play_timer_finish_alarm();
        }
        [prefix]
        Gtk.Button {
          halign: center;
          valign: center;
          icon-name: 'system-restart-symbolic';
          clicked => $_reset_timer_finish_settings();
        }
        Adw.ActionRow uri_timer_finish_alarm {
          title: 'alarm-clock-elapsed';
          subtitle: 'freedesktop';
          [suffix]
          Gtk.Button {
            halign: center;
            valign: center;
            icon-name: 'folder-open-symbolic';
            clicked => $_select_timer_finish_alarm();
          }
        }
        Adw.ActionRow {
          title: 'Repeat alarm';
          SpinButton repeat_timer_finish_alarm {
            valign: center;
            numeric: true;
            adjustment:
              Adjustment {
                lower: 1;
                upper: 10;
                value: 1;
                page-increment: 1;
                step-increment: 1;
              };
              value-changed => $_on_repeat_timer_finish_alarm_changed();
          }
        }
      }
    }
  };
}
