<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0" />
  <requires lib="Adw" version="1.0" />
  <template class="PomodoroWindow" parent="AdwApplicationWindow">
    <property name="default-width">400</property>
    <property name="default-height">600</property>
    <property name="hide-on-close">true</property>
    <property name="title">Pomodoro</property>
    <child>
      <object class="AdwLeaflet">
        <property name="orientation">vertical</property>
        <property name="visible-child">world_leaflet</property>
        <property name="transition-type">under</property>
        <property name="can-unfold">False</property>
        <child>
          <object class="AdwLeaflet" id="world_leaflet">
            <property name="can-unfold">False</property>
            <property name="can-navigate-back">true</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <!-- Start AdwHeaderBar -->
                <child>
                  <object class="AdwHeaderBar">
                    <property name="centering-policy">strict</property>
                    <child type="title">
                      <object class="AdwViewSwitcherTitle" id="view_switcher_title">
                        <property name="stack">stack</property>
                        <property name="title" bind-source="PomodoroWindow" bind-property="title"
                          bind-flags="sync-create" />
                      </object>
                    </child>
                    <child type="end">
                      <object class="GtkMenuButton">
                        <property name="menu_model">primary_menu</property>
                        <property name="icon_name">open-menu-symbolic</property>
                        <property name="tooltip-text" translatable="yes">Main menu</property>
                      </object>
                    </child>
                  </object>
                </child>
                <!-- End AdwHeaderBar -->
                <!-- Start AdwViewStack -->
                <child>
                  <object class="AdwViewStack" id="stack">
                    <property name="hexpand">True</property>
                    <property name="vexpand">True</property>
                    <!-- Start timer page-->
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">timer</property>
                        <property name="title" translatable="yes">_Timer</property>
                        <property name="use-underline">True</property>
                        <property name="icon-name">camera-timer-symbolic</property>
                        <property name="child">
                          <object class="Timer" />
                        </property>
                      </object>
                    </child>
                    <!-- End timer page-->
                    <!-- Start Statistics page-->
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">statistics</property>
                        <property name="title" translatable="yes">_Statistics</property>
                        <property name="use-underline">True</property>
                        <property name="icon-name">profit-symbolic</property>
                        <property name="child">
                          <object class="Statistics" />
                        </property>
                      </object>
                    </child>
                    <!-- End Statistics page-->
                    <!-- Start Historic page-->
                    <child>
                      <object class="AdwViewStackPage">
                        <property name="name">history</property>
                        <property name="title" translatable="yes">_Historic</property>
                        <property name="use-underline">True</property>
                        <property name="icon-name">history-undo-symbolic</property>
                        <property name="child">
                          <object class="History" />
                        </property>
                      </object>
                    </child>
                    <!-- End Historic page-->
                  </object>
                </child>
                <!-- End AdwViewStack -->
                <child>
                  <object class="AdwViewSwitcherBar">
                    <property name="stack">stack</property>
                    <property name="reveal" bind-source="view_switcher_title"
                      bind-property="title-visible" bind-flags="sync-create" />
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Pomodoro</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>

